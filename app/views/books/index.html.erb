<%= form_tag(books_path, method: :get) do %>
  <p> Search for an Author </p>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search") %>
<% end %>

<% if @books.count == 0 %>
    <h2>There are books currently in this category</h2>
<% else %>
    <% @books.each do |book| %>
        <h2><%= link_to book.title, book_path(book) %></h2>
    <% end %>
<% end %>
<%= will_paginate @collection, renderer: WillPaginateSemanticUi::ActionView::Renderer %>

